  STRING_	(CLS_TEMPLATE ,1024)
END_TABLE

TABLE_ (DB_COMMERCIAL)
  INT		(ID)  PRIMARY_KEY AUTO_INCREMENT
  STRING_	(COM_CODE ,255)
