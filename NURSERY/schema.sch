TABLE_ ( DB_TRAY )
  INT		(ID)  PRIMARY_KEY AUTO_INCREMENT
  STRING_	(TRA_NAME ,255)
  INT_		(TRA_GRAIN_COUNT )
END_TABLE

TABLE_ ( DB_WORKSHOP )
  INT_		(ID)  PRIMARY_KEY AUTO_INCREMENT
  INT_		(TRA_ID)
  STRING_	(WOR_NAME ,255)
  INT_		(WOR_TRAY_COUNT )
  INT_		(WOR_WORKER_COUNT )
  STRING_	(WOR_CODE ,30)
END_TABLE

TABLE_ (DB_CUSTOMER)
  INT		(ID)  PRIMARY_KEY AUTO_INCREMENT
  STRING_	(CUS_CODE ,255)
  STRING_	(CUS_NAME ,222)
  STRING_	(CUS_ADDRESS ,250)
  STRING_	(CUS_PHONE ,30)
  STRING_	(CUS_FAX ,30)
  STRING_	(CUS_CITY ,250)
  STRING_	(CUS_CONTACT ,250)
  STRING_	(CUS_EMAIL ,250)
END_TABLE

TABLE_ (DB_ORDER)
  INT		(ID)  PRIMARY_KEY AUTO_INCREMENT
  INT_		(CUS_ID )
