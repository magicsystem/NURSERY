/* Users Managers */
TABLE_ (DB_USER_GROUP)
  INT		(ID) PRIMARY_KEY AUTO_INCREMENT
  STRING_	(USG_NAME, 255)
END_TABLE

TABLE_ (DB_USER)
  INT		(ID) PRIMARY_KEY AUTO_INCREMENT
  STRING_	(USR_NAME, 255)
  STRING_	(USR_LOGIN, 255)
  STRING_	(USR_PASSWORD, 255)
END_TABLE

TABLE_ (DB_USER_REFERENCE)
  INT		(ID) PRIMARY_KEY AUTO_INCREMENT
  INT_		(USG_ID)
  INT_		(USR_ID)
END_TABLE

TABLE_ (DB_USER_ACCESS)
  INT_		(USA_ID) PRIMARY_KEY AUTO_INCREMENT
  INT		(USG_ID)
  STRING_	(USA_NAME,255)
  STRING_	(USA_VALUES,255)
END_TABLE

